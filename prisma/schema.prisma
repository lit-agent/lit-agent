/// most important
model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // auth
  accounts      Account[]
  sessions      Session[]
  emailVerified DateTime?
  phoneVerified DateTime?
  validated     Boolean   @default(false) // ÊòØÂê¶ÈÄöËøáÈ™åËØÅ

  // basic info
  name        String?
  nameUpdated DateTime?

  email  String?    @unique
  phone  String?    @unique
  image  String?
  status UserStatus @default(offline)
  type   UserType   @default(user)

  // platform
  honors Honor[]

  // chat
  messages          UserMessage[] // ÂÅöÂàÜÁ±ªÁî®
  sentMessages      Message[]     @relation("from")
  receivedMessages  Message[]     @relation("to")
  mentionedMessages Message[]     @relation("mention")

  // tasks
  fromTasks Task[]
  toTasks   UserTask[]

  // products
  fromProducts Product[]
  toProducts   UserProduct[]
  bills        Bill[]

  // actions  UserAction[]

  fromRelations UserRelation[] @relation("to")
  toRelations   UserRelation[] @relation("from")

  rooms Room[]

  // balance
  totalEarnedFire   Int @default(0)
  currentEarnedFire Int @default(0)
  balance           Int @default(0)

  validations Validation[]
}

