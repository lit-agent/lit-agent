enum UserActionType {
  // account
  activate
  deactivate
  online
  offline

  // producer's task/product
  create
  pause
  continue
  cancel

  // consumer's task/product
  approve
  reject

  // consumer's task
  accept
  submit

  // consumer's product
  favor
  unfavor
  payByCash
  payByFire
}

// 消费者与博主开发的产品之间的关系
model UserProduct {
  id        String   @id @default(cuid())
  createdAt DateTime @updatedAt
  updatedAt DateTime @updatedAt

  product   Product @relation("consume-product", fields: [productId], references: [id])
  productId String

  consumer   User   @relation("consume-product", fields: [consumerId], references: [id])
  consumerId String

  isFavored Boolean @default(false)
  inCar     Int     @default(0)
  bought    Int     @default(0)

  // userActions UserAction[]
}

enum UserStatus {
  online
  busy
  offline
}

// 消费者与博主发布的任务之间的关系
model UserTask {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation("consume-task", fields: [userId], references: [id])
  userId String

  task   Task   @relation("consume-task", fields: [taskId], references: [id])
  taskId String

  status UserTaskStatus

  // actions UserAction[]
}

enum UserTaskStatus {
  goon
  finished
  cancelled
}

enum UserType {
  user
  assistant
  blogger
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
